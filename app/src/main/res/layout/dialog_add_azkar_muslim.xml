<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:minWidth="250dp"
			android:orientation="vertical">
			
    <TextView 
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:text="النص"
		android:textStyle="bold"
		android:textSize="18dp"
		android:layout_gravity="right"
		android:layout_marginTop="10dp"
	/>

	<EditText 
		android:layout_width="match_parent"
		android:minWidth="200dp"
		android:minHeight="100dp"
		android:padding="20dp" 
		android:layout_height="wrap_content"
		android:id="@+id/dialog_add_azkar_muslimEditText"
		android:background="@drawable/shape_dialog_add_azkar"/>

	<LinearLayout

		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="right">
		<!--<EditText 
			android:id="@+id/dialog_add_azkar_muslimEditTextpositionZkr"
			android:layout_width="70dp"
			android:layout_height="50dp"
			android:inputType="number"
			android:textStyle="bold"
			android:textSize="18dp"
			android:textColor="#FFC0BFBF"
			android:layout_marginTop="10dp"
			android:layout_marginRight="20dp"
			android:background="@drawable/shape_dialog_add_azkar"/>
		<TextView 
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:text="الموضع"
			android:textStyle="bold"
			android:textSize="14dp"
			android:layout_marginRight="10dp"
			android:layout_marginTop="10dp"
		/>
	-->
		<EditText 
			android:id="@+id/dialog_add_azkar_muslimEditTextRepeate"
			android:layout_width="70dp"
			android:layout_height="50dp"
			android:inputType="number"
			android:textStyle="bold"
			android:textSize="18dp"
			android:textColor="#FFC0BFBF"
			android:layout_marginTop="10dp"
			android:layout_marginRight="20dp"
			android:background="@drawable/shape_dialog_add_azkar"/>
		<TextView 
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:text="التكرار"
			android:textStyle="bold"
			android:textSize="14dp"
			android:layout_marginRight="15dp"
			android:layout_marginTop="10dp"
		/>

	</LinearLayout>


    <LinearLayout

		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
	>

		<Button 
			android:layout_width="match_parent"
			android:layout_height="50dp"
            android:layout_weight="1"
			android:text="رجوع"
			android:textStyle="bold"
			android:textColor="#FFC0BFBF"
			android:background="@drawable/shape_dialog_add_azkar"
		    android:id="@+id/dialog_add_azkar_muslimBtnBack"
			android:layout_margin="10dp"/>

		<Button 
			android:layout_width="match_parent"
			android:layout_height="50dp"
            android:layout_weight="1"
			android:text="حفظ"
			android:textStyle="bold"
			android:textColor="#fff"
			android:background="@drawable/shape_btn_azkary_blue"
		    android:id="@+id/dialog_add_azkar_muslimBtnSave"
			android:layout_margin="10dp"/>

	</LinearLayout>
	
		</LinearLayout>
	</ScrollView>
	
</LinearLayout>
